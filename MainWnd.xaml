<Window x:Class="Steganography.Stego"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Stegozaurus" Height="722" Width="897" >
    <Grid Height="674" Margin="10,8,17,9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="349*" />
            <ColumnDefinition Width="102"/>
            <ColumnDefinition Width="237"/>
        </Grid.ColumnDefinitions>
        <Button Height="23" HorizontalAlignment="Left" x:Name="btnOpen" VerticalAlignment="Top" Width="75" Click="btnOpenClick" Grid.Column="1" Margin="12,0,0,0" Content="Открыть"/>
        <Image Margin="171,186,16,142" Name="imageBox" Stretch="Fill" Grid.Column="1" Grid.ColumnSpan="3"  />
        <Button Grid.Column="1" Height="23" Margin="103,0,0,0" x:Name="bntSave" VerticalAlignment="Top" Click="btnSaveClick" HorizontalAlignment="Left" Width="74" Content="Сохранить"/>
        <TextBox Grid.Column="1" Margin="10,47,0,0" x:Name="txtMessage" Height="111" VerticalAlignment="Top" DataContext="{Binding}"  TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" AcceptsTab="True" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="573" />
        <Button Grid.Column="1" HorizontalAlignment="Left" Margin="10,186,0,458" x:Name="btnInsert" Width="139" Click="btnInsertClick" Content="Вставить сообщение"/>
        <Button Grid.Column="1" HorizontalAlignment="Left" Margin="10,239,0,405" x:Name="btnExtract" Width="139" Click="btnExtractClick" Content="Извлечь сообщение" RenderTransformOrigin="-0.489,0.517"/>
        <PasswordBox Grid.Column="3" Height="23" Margin="10,137,16,0" x:Name="txtPassword" VerticalAlignment="Top" MaxLength="16" />
        <Label Content="Пароль:" Grid.Column="3" Height="29" HorizontalAlignment="Left" Margin="10,103,0,0" Name="label1" VerticalAlignment="Top" Width="64" />
        <TextBlock Grid.Column="1" Height="18" HorizontalAlignment="Left" Margin="20,412,0,0" Name="MSE" Text="MSE:" VerticalAlignment="Top" />
        <TextBox Grid.Column="1" Height="23" HorizontalAlignment="Left" Margin="10,430,0,0" Name="textBoxMSE" VerticalAlignment="Top" Width="100" />
        <TextBlock Grid.Column="1" Height="17" HorizontalAlignment="Left" Margin="20,464,0,0" Name="PSNR" Text="PSNR:" VerticalAlignment="Top" />
        <TextBox Grid.Column="1" Height="23" HorizontalAlignment="Left" Margin="10,0,0,170" Name="textBoxPSNR" VerticalAlignment="Bottom" Width="100" />
        <TextBlock Grid.Column="1" Height="22" HorizontalAlignment="Left" Margin="12,29,0,0" Name="textBlock1" Text="Сообщение:" VerticalAlignment="Top" Width="84" />
        <StackPanel x:Name="spGroup" Grid.Column="3" Height="51" Margin="10,47,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="213">
            <CheckBox x:Name="cbEnglish" Content="Английский язык" IsChecked="True" Checked="CbEnglish_Checked" Unchecked="CbEnglish_Unchecked"/>
            <CheckBox x:Name="cbRussian" Content="Русский язык" Checked="CbRussian_Checked" Unchecked="CbRussian_Unchecked"/>
            <CheckBox x:Name="cbSafeEncr" Content="Безопасный метод кодирования" IsChecked="True"/>
        </StackPanel>
        <TextBox Grid.Column="1" Margin="12,553,0,0" x:Name="txtLog" Height="111" VerticalAlignment="Top" DataContext="{Binding}"  TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" AcceptsTab="True" Grid.ColumnSpan="3" HorizontalAlignment="Left" Width="819" />
        <TextBlock Grid.Column="1" Height="22" HorizontalAlignment="Left" Margin="12,531,0,0" x:Name="log" Text="Журнал событий" VerticalAlignment="Top" Width="137" />
    </Grid>
</Window>
